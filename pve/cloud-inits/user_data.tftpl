#cloud-config
package_update: true
package_upgrade: true

users:
- name: ${name}
  groups: sudo
  shell: /bin/bash
  passwd: ${password}
  sudo: ['ALL=(ALL) NOPASSWD:ALL']
  ssh_authorized_keys:
    - ${ssh_key}

packages:
  - jq
  - curl
  - qemu-guest-agent

runcmd:
  - [ systemctl, daemon-reload ]
  - [ systemctl, enable, --now, qemu-guest-agent ]
